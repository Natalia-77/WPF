    <Grid>
        <TextBox x:Name="tb_boxres"
                 Text="OFF"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 TextAlignment="Left"
                 Height="50"
                 Width="301"                 
                 Margin="5,0,0,0" />
        <!--"{StaticResource test2}"-->

        <WrapPanel x:Name="wrap_panel">
            
            <Button x:Name="btn_seven"
                    Height="50"
                    Width="60"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="5,50,0,0"                 
                    Content="7" 
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_eight"
                    Height="50"
                    Width="60"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0,50"
                    Content="8"
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_nine"
                    Height="50"
                    Width="60"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0,50"                   
                    Content="9"
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_minus"
                    Height="50"
                    Width="60"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0,50"                   
                    Content="-"
                    Click="btn_buttons_Click"/>
            <Button x:Name="btnOn"
                    Content="C"
                    Height="50"
                    Width="60"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="0,50"
                    Click="btnOn_Click"/>
            <Button x:Name="btn_four"
                    Height="50"
                    Width="60"
                    Margin="5,-50"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                
                    Content="4"
                   Click="btn_buttons_Click" />
            <Button x:Name="btn_five"
                    Height="50"
                    Width="60"
                    Margin="-5,-50"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                  
                    Content="5"
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_six"
                    Height="50"
                    Width="60"
                    Margin="5,-50"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                  
                    Content="6"
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_plus"
                    Height="50"
                    Width="60"
                    Margin="-5,-50"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                  
                    Content="+"
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_double"
                    Height="50"
                    Width="60"
                    Margin="5,-50"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                  
                    Content="/"
                    Click="btn_buttons_Click"/>            
            <Button x:Name="btn_one"
                    Height="50"
                    Width="60"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                  
                    Content="1"
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_two"
                    Height="50"
                    Width="60"
                    Margin="-5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                  
                    Content="2"
                   Click="btn_buttons_Click" />
            <Button x:Name="btn_three"
                    Height="50"
                    Width="60"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                  
                    Content="3"
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_umn"
                    Height="50"
                    Width="60"
                    Margin="-5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                   
                    Content="*"
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_dot"
                    Height="50"
                    Width="60"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                  
                    Content="."
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_zero"
                    Height="50"
                    Width="60"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                  
                    Content="0"
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_dotdouble"
                    Height="50"
                    Width="60"
                    Margin="-5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                   
                    Content="00"
                    Click="btn_buttons_Click"/>
            <Button x:Name="btn_res"
                    Height="50"
                    Width="180"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"                   
                    Content="="
                   Click="btn_buttons_Click" />
        </WrapPanel>
    </Grid>
</Window>
